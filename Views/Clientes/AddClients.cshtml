@model WebAtencionClientes.Models.Entitites.ATENCION_CLIENTE

@{
    ViewData["Title"] = "Agregar Cliente";
    Layout = "_Layout";
}



<h1 class="text-center mb-4">Agregar Cliente</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <form asp-controller="Clientes" asp-action="AddClients" method="post">
                @* Campo oculto para el ID (por si se usa para edición o validación) *@
                <input type="hidden" asp-for="Id" />
               

                @* Muestra errores de validación generales *@
                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                }

                <div class="mb-3">
                    <label asp-for="NOMBRE" class="form-label">Nombre</label>
                    <input name="NOMBRE" asp-for="NOMBRE" class="form-control" />
                    <span asp-validation-for="NOMBRE" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="APELLIDOS" class="form-label">Apellidos</label>
                    <input name="APELLIDOS" asp-for="APELLIDOS" class="form-control" />
                    <span asp-validation-for="APELLIDOS" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CELULAR" class="form-label">Celular</label>
                    <input name="CELULAR" asp-for="CELULAR" class="form-control" />
                    <span asp-validation-for="CELULAR" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EMAIL" class="form-label">Email</label>
                    <input name="EMAIL" asp-for="EMAIL" class="form-control" />
                    <span asp-validation-for="EMAIL" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SEXO" class="form-label">Sexo</label>
                    <br />
                    <div class="form-check form-check-inline">
                        <input name="SEXO" class="form-check-input" type="radio" asp-for="SEXO" value="Hombre" id="sexoHombre">
                        <label class="form-check-label" for="sexoHombre">Hombre</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input name="SEXO" class="form-check-input" type="radio" asp-for="SEXO" value="Mujer" id="sexoMujer">
                        <label class="form-check-label" for="sexoMujer">Mujer</label>
                    </div>
                    <span asp-validation-for="SEXO" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MOTIVO" class="form-label">Motivo</label>
                    <select name="MOTIVO" asp-for="MOTIVO" class="form-select">
                        <option value="">-- Seleccione un motivo --</option>
                        <option value="Incidencia">Incidencia</option>
                        <option value="Queja">Queja</option>
                        <option value="Reclamación">Reclamación</option>
                        <option value="Sugerencia">Sugerencia</option>
                    </select>
                    <span asp-validation-for="MOTIVO" class="text-danger"></span>
                </div>

                <div class="mb-3">
                   
                    <input asp-for="FECHA_ALTA" type="hidden" class="form-control"  />
                  
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="ListClients" class="btn btn-link">Volver a la lista</a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @if (TempData["mensaje"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: '@TempData["mensaje"]'
            });
        </script>
    }

}
